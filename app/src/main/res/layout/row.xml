            android:id="@+id/textview2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="    duration   "
            android:id="@+id/textview3"/>


    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:hint="demo"
        android:id="@+id/button1"/>



